<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:background="@drawable/gradient_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/logo_"/>

    <EditText
        android:background="@drawable/rounded_style"
        android:textAlignment="center"
        android:textColorHint="#B1AAAA"
        android:textColor="#fff"
        android:layout_marginTop="90dp"
        android:id="@+id/editTextUsername"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="USERNAME"
         />

    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/editTextPassword"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:ems="10"
        android:textAlignment="center"
        android:textColorHint="#B1AAAA"
        android:textColor="#fff"
        android:background="@drawable/rounded_style"
        android:hint="PASSWORD"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/checkBox"
        android:buttonTint="#fff"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me" />

    <TextView
        android:id="@+id/textView2"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="OR" />

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in With"
         />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/facebook"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/google"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/buttonGuest"
        android:layout_width="175dp"
        android:background="@drawable/rounded_style2"
        android:layout_height="20dp"
        android:textColor="#fff"
        android:text="GUEST MODE" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF9800"
        android:text="Not registered yet?"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="623dp" />


    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF9800"
        android:text="Sign up here"
        tools:layout_editor_absoluteX="354dp"
        tools:layout_editor_absoluteY="26dp" />

</LinearLayout>